
   {% extends my_theme %}

{% block body %}

    {{ block('nav_bar') }}

    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        <i class="fa fa-gear"> </i> Paramètres de votre compte
                    </h1>
                </div>
            </div>
            <!-- /.row -->


            <div class="row">
                <div class="col-lg-6">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">Votre profil</div>
                                <div>avec vos informations personnels</div>
                            </div>
                        </div>
                    </div>
                    <div class="panel-footer">
                        <span class="pull-left">

                        <div>
                            <div class="text-blue">
                            <li> <label> Votre image de profil: </label> </li>
                        <img class="img-thumbnail" src="{{user.photo}}" alt="">
                        </div>
                        <br>
                        <div class="form-group">
                             <div class="text-blue">
                            <li>
                            <label>Votre Nom: {{user.nom}} </label>
                            </li>
                             </div>
                        </div>

                        <div class="form-group">
                             <div class="text-blue">
                            <li>
                            <label>Votre Prenom: {{user.prenom}} </label>
                            </li>
                             </div>
                        </div>

                        <div class="form-group">
                             <div class="text-blue">
                            <li>
                            <label> <i class="fa fa-fw fa-phone"></i> Votre tel: {{user.telephone}} </label>
                            </li>
                             </div>
                        </div>

                        <div class="form-group">
                             <div class="text-blue">
                            <li>
                            <label><i class="fa fa-fw fa-envelope"></i> Votre email: {{user.email}}</label>
                            </li>
                             </div>
                        </div>

                         <div class="form-group">
                             <div class="text-blue">
                            <li>
                            <label>Votre age: {{user.age}} </label>
                            </li>
                             </div>
                        </div>


                        <div class="form-group">
                             <div class="text-blue">
                             <li>
                               <i class="fa fa-fw fa-car"></i>
                                <label>Votre voiture favorite: {{user.voitureId}} </label>
                            </li>
                             </div>
                        </div>
                    </div>
                        </span>
                    </div>

                    <div class="clearfix"></div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="panel panel-orange">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="fa fa-gears fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right">
                            <div class="huge">Modifications</div>
                            <div>de vos informations personnelles</div>
                        </div>
                    </div>
                </div>
            <form action="{{ path('setting_result') }}" method="POST">
                <div class="panel-body">
                        <span class="pull-left">
                            <div class="form-group">
                        <div class="text-orange">
                                <li>
                                <label>Votre image de profil: </label>
                                <input type="file" name="photo" class="form-control" placeholder="aucun fichier choisi">
                                </li>
                                </div>
                            </div>

                    <div class="form-group">
                        <div class="text-orange">
                        <li>
                        <label>Votre nom : </label>
                        <input type="text" name="nom" class="form-control" placeholder="Ex : Jean ">
                        </li>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-orange">
                        <li>

                        <label> Votre prenom </label>
                        <input type="text" name="prenom" class="form-control" placeholder="Ex : Paul ">
                        </li>
                        </div>

                        <div class="text-orange">
                        <li>
                        <label><i class="fa fa-fw fa-phone"></i>  Votre télephone : </label>
                        <input type="text" name="telephone" class="form-control" placeholder="Ex : 0299989796">
                        </li>
                        </div>

                    </div>

<div class="form-group">
                        <div class="text-orange">
                        <li>
                        <label> <i class="fa fa-fw fa-envelope"></i>  Votre émail : </label>
                        <input type="email" name="email" class="form-control" placeholder="Ex : basegougoudu44@hotmail.fr ">
                        </li>
                        </div>
                    </div>

                        <div class="text-orange">
                                <li>
                    <label>Votre age: </label>
                    <div class="form-group input-group">
                         <input name="age" type="text" class="form-control" placeholder="Ex : 18 ">
                        <span class="input-group-addon"> <div class="text-orange">Ans </div></span>
                     </div>
                            </div>
                            </li>
                            <div class="form-group">
                        <div class="text-orange">
                        <li>
                            <label> <i class="fa fa-fw fa-automobile"></i> Votre voiture favorite </label>
                            <input name="voiture" type="text" class="form-control" placeholder="Ex : Kangou ">
                        </li>
                        </div>
                            </div>

                </div>
            </div>
            <div style="text-align: center">
            <button type="submit" class="btn btn-lg btn-warning">Finaliser les modificiations</button>
        </form>
            </div>

        </div>
    </div>
</div>


<!-- /.row -->

</div>
<!-- /.container-fluid -->

</div>
<!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->

<!-- jQuery -->
<script src="{{ asset('js/jquery.js') }}"></script>

<!-- Bootstrap Core JavaScript -->
<script src="{{ asset('js/bootstrap.min.js') }}"></script>

<!-- Morris Charts JavaScript -->
<script src="{{ asset('js/plugins/morris/raphael.min.js') }}"></script>
<script src="{{ asset('js/plugins/morris/morris.min.js') }}"></script>
<script src="{{ asset('js/plugins/morris/morris-data.js') }}"></script>


<script src="{{ asset('js/home.js') }}"></script>

{% endblock %}