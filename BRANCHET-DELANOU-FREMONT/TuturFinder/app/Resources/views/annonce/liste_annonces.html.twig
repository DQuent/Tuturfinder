{% extends my_theme %}

{% block body %}




    {{ block('nav_bar') }}

<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <div class="text-blue">
                    <h1 class="page-header">
                        <i class="fa fa-support"></i> Liste des annonces trouvées
                    </h1>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">

                    <div class="row">

                        {% for add in array_annonce %}
                            <div class="col-sm-4">
                                <div class="list-group">
                                    <a href="#" class="list-group-item active"><label>Titre de l'annonce
                                            : </label>{{ add.titre }}</a>
                                    <a href="#" class="list-group-item"><label>Ville de départ
                                            :</label>{{ add.villeDep }}</a>
                                    <a href="#" class="list-group-item"><label>Ville d'arrivée
                                            :</label> {{ add.villeArr }}</a>
                                    <a href="#" class="list-group-item"><label>Prix par place (€)
                                            :</label> {{ add.prix }} </a>
                                    <a href="#" class="list-group-item"><label>Places disponibles :</label>
                                        {% set foo = add.getArrayPassagers|length %} {{ add.nbPlaces - foo }}</a>
                                    <a href="#" class="list-group-item"><label>Date de départ
                                            :</label>{{ add.dateDep|date('Y-m-d') }}</a>
                                    <a href="{{ path('annonce_description', { id: add.id } ) }}"
                                       class="list-group-item"><i class="fa fa-fw fa-arrow-circle-o-right"></i> <label>
                                            <div style="cursor: pointer;"
                                                 onclick="window.location='{{ path('annonce_description', { id: add.id } ) }}';"
                                                 class="text-blue">Voir
                                                détails
                                            </div>
                                        </label></a>
                                </div>
                            </div>
                        {% endfor %}


                    </div>


                </div>
                <!-- /#page-wrapper -->

            </div>
            <!-- /#wrapper -->


            <!-- /.Météo -->

            <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-sun-o"></i> Météo Nantes
                                        </h3>
                                    </div>
                                    <div id="cont_NDQxMDl8M3wxfDR8NHwzMzc5Yjd8MXxmMGFkNGV8Y3wx">
                                        <div id="spa_NDQxMDl8M3wxfDR8NHwzMzc5Yjd8MXxmMGFkNGV8Y3wx"><a
                                                    id="a_NDQxMDl8M3wxfDR8NHwzMzc5Yjd8MXxmMGFkNGV8Y3wx"
                                                    href="http://www.meteocity.com/france/nantes_v44109/"
                                                    target="_blank"
                                                    style="color:#333;text-decoration:none;">Météo
                                                Nantes</a>
                                            <script type="text/javascript"
                                                    src="http://widget.meteocity.com/js/NDQxMDl8M3wxfDR8NHwzMzc5Yjd8MXxmMGFkNGV8Y3wx"></script>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <!-- /.Météo -->


            <!-- Traffic -->

            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">

                        <div class="modal-content">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-car"></i> Traffic
                                                Ouest
                                            </h3>
                                        </div>
                                        <table border="0" cellspacing="3" cellpadding="0" bgcolor="#000066"
                                               style="font-family:Arial,Helvetica,sans-serif; font-size:12px; line-height:1.2; font-weight:bold;">
                                            <tr>
                                                <td>
                                                    <script type="text/javascript"
                                                            src="http://www.infotrafic.com/js/affiliate.js.php?Affi=86eb987737590dd9fd7ed100ffe49602"></script>
                                                </td>
                                            </tr>
                                        </table>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>


        <!-- /.Traffic -->


        <!-- jQuery -->
        <script src="{{ asset('js/jquery.js') }}"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('js/bootstrap.min.js') }}"></script>

        <!-- Morris Charts JavaScript -->
        <script src="{{ asset('js/plugins/morris/raphael.min.js') }}"></script>
        <script src="{{ asset('js/plugins/morris/morris.min.js') }}"></script>
        <script src="{{ asset('js/plugins/morris/morris-data.js') }}"></script>


        <script src="{{ asset('js/home.js') }}"></script>

        {% endblock %}

