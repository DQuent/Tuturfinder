{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonce</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ annonce.id }}</td>
            </tr>
            <tr>
                <th>Datedep</th>
                <td>{% if annonce.dateDep %}{{ annonce.dateDep|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datearr</th>
                <td>{% if annonce.dateArr %}{{ annonce.dateArr|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Id_annonceur</th>
                <td>{{ annonce.idannonceur }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ annonce.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ annonce.description }}</td>
            </tr>
            <tr>
                <th>Nbplaces</th>
                <td>{{ annonce.nbPlaces }}</td>
            </tr>
            <tr>
                <th>Dureedetour</th>
                <td>{{ annonce.dureeDetour }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ annonce.prix }}</td>
            </tr>
            <tr>
                <th>Villedep</th>
                <td>{{ annonce.villeDep }}</td>
            </tr>
            <tr>
                <th>Villearr</th>
                <td>{{ annonce.villeArr }}</td>
            </tr>
            <tr>
                <th>Adressedep</th>
                <td>{{ annonce.adresseDep }}</td>
            </tr>
            <tr>
                <th>Adressearr</th>
                <td>{{ annonce.adresseArr }}</td>
            </tr>
            <tr>
                <th>Id_conducteur</th>
                <td>{{ annonce.idconducteur }}</td>
            </tr>
            <tr>
                <th>Array_passagers</th>
                <td>{% if annonce.arraypassagers %}{{ annonce.arraypassagers|join(', ') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
